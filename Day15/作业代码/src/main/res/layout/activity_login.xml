<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_img"
            android:src="@drawable/public_login_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_89"
            android:layout_marginLeft="@dimen/dp_59"
            android:layout_width="@dimen/dp_256"
            android:layout_height="@dimen/dp_82"/>
        <EditText
            android:id="@+id/et_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_img"
            android:layout_marginTop="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_69"
            android:layout_width="match_parent"
            android:hint="请输入手机号"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="@dimen/dp_54"
            android:text="获取验证码"
            android:id="@+id/getVerifyCode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_verify"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="请输入验证码"
            android:layout_marginTop="@dimen/dp_74"
            android:layout_marginLeft="@dimen/dp_50"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_height="wrap_content"/>
        <Button
            app:layout_constraintTop_toBottomOf="@id/et_verify"
            android:layout_marginLeft="@dimen/dp_32"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_69"
            android:id="@+id/bt_login"
            android:layout_width="@dimen/dp_307"
            android:text="登陆"
            android:textSize="25sp"
            android:layout_height="@dimen/dp_45"/>
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_32"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_login"
            android:textSize="15sp"
            android:text="未注册的手机号将自动注册"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login_pass_skip"
            android:text="密码登录"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_login"
            android:layout_marginRight="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sanfang_login"
            android:text="第三方登陆"
            app:layout_constraintTop_toBottomOf="@id/bt_login"
            android:layout_marginTop="@dimen/dp_137"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/sanfang_login"
            android:src="@drawable/common_share_wx"
            android:id="@+id/wx_login"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_121"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_36"/>
        <ImageView
            android:layout_marginRight="@dimen/dp_128"
            android:layout_marginTop="@dimen/dp_43"
            android:src="@drawable/common_share_qq"
            android:id="@+id/qq_login"
            app:layout_constraintTop_toBottomOf="@id/sanfang_login"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_36"/>
<TextView
    app:layout_constraintTop_toBottomOf="@id/wx_login"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="微信登录"
    android:textColor="@color/gray"
    android:layout_marginLeft="@dimen/dp_111"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

<TextView
    app:layout_constraintTop_toBottomOf="@id/qq_login"
   app:layout_constraintRight_toRightOf="parent"
    android:text="QQ登录"
    android:textColor="@color/gray"
   android:layout_marginRight="@dimen/dp_119"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>