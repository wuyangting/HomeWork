<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frame"
        app:layout_constraintBottom_toTopOf="@id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<RadioGroup
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/radio_group"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75">
<RadioButton
    android:background="@drawable/main_select"
    android:id="@+id/main_shouye"
    android:layout_margin="15dp"
    android:button="@null"
    android:layout_gravity="center"
    android:text="首页"
    android:checked="true"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"/>
    <RadioButton
        android:background="@drawable/class_select"
        android:id="@+id/main_class"
        android:layout_margin="15dp"
        android:button="@null"
        android:text="课程"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <RadioButton
        android:background="@drawable/yue_class_select"
        android:id="@+id/main_yue_class"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:button="@null"
        android:text="约课记录"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <RadioButton
        android:background="@drawable/person_select"
        android:id="@+id/main_person"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:button="@null"
        android:text="个人"
android:textSize="20sp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>



</RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>